CREATE DATABASE BIBLIOTECA
CREATE TABLE CADASTRO
(
ID_CADASTRO INT PRIMARY KEY NOT NULL IDENTITY(1,1),
NOME_CADASTRO VARCHAR(255),
EMAIL VARCHAR(255),
SENHA VARCHAR(255),
IDADE TINYINT,
)
CREATE TABLE EDITORA
(
ID_EDITORA INT NOT NULL PRIMARY KEY IDENTITY(1,1),

)
CREATE TABLE AUTOR
(
ID_AUTOR INT PRIMARY KEY NOT NULL IDENTITY(1,1),

)
CREATE TABLE DISCIPLINA
(
ID_DISCIPLINA INT NOT NULL PRIMARY KEY IDENTITY(1,1),
NOME_DISCIPLINA VARCHAR(255),
)
CREATE TABLE LIVRO
(
ID_LIVRO INT NOT NULL PRIMARY KEY IDENTITY(1,1),
ID_AUTOR INT REFERENCES AUTOR(ID_AUTOR),
ID_DISCIPLINA INT REFERENCES DISCIPLINA(ID_DISCIPLINA),
ID_EDITORA INT REFERENCES EDITORA(ID_EDITORA),
PDF TEXT,
)
CREATE TABLE HISTORICO
(
ID_HISTORICO INT PRIMARY KEY NOT NULL IDENTITY(1,1),
ID_CADASTRO INT REFERENCES CADASTRO(ID_CADASTRO),
ID_LIVRO INT REFERENCES LIVRO(ID_LIVRO),
DATA DATETIME,
)
ALTER TABLE AUTOR ADD NOME_AUTOR VARCHAR(255)
ALTER TABLE EDITORA ADD NOME_EDITORA VARCHAR(255)
ALTER TABLE LIVRO ADD NOME_LIVRO VARCHAR(255), ANO_LIVRO TINYINT
SELECT * FROM LIVRO

DROP DATABASE ESTOQUE
